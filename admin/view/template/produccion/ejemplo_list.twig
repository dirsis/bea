<script type="text/javascript"><!--


		
		function limit() {
			$.LoadingOverlay("show");
			url = 'index.php?route=produccion/ejemplo&user_token={{ user_token }}';
			url += filtrar();
			console.log(url);
			location = url;
		}
		$('#button-filter').on('click', function() {
			$.LoadingOverlay("show");
			url = 'index.php?route=produccion/ejemplo&user_token={{ user_token }}';
			url += filtrar();
			location = url;
		});  
		$('#button-filter2').on('click', function() {
			$.LoadingOverlay("show");
			url = 'index.php?route=produccion/ejemplo&user_token={{ user_token }}';
			url += filtrar();
			location = url;
		});  
		function filtrar(){
			url ="";
			var filter_ejemplo_id = $('input[name=\'filter_ejemplo_id\']').val();
			if (filter_ejemplo_id) {
				url += '&filter_ejemplo_id=' + encodeURIComponent(filter_ejemplo_id);
			}
			var filter_numero = $('input[name=\'filter_numero\']').val();
			if (filter_numero) {
				url += '&filter_numero=' + encodeURIComponent(filter_numero);
			}
			var filter_matricula = $('input[name=\'filter_matricula\']').val();
			if (filter_matricula) {
				url += '&filter_matricula=' + encodeURIComponent(filter_matricula);
			}			
			var filter_descrip = $('input[name=\'filter_descrip\']').val();
			if (filter_descrip) {
				url += '&filter_descrip=' + encodeURIComponent(filter_descrip);
			}
			var filter_status = $('select[name=\'filter_status\']').val();
			if (filter_status !== '') {
				url += '&filter_status=' + encodeURIComponent(filter_status); 
			}
			var limit = $('select[name=\'limit\']').val();
			if (limit !== '') {
				url += '&limit=' + encodeURIComponent(limit); 
			}	
			return url;
		};
		function download_xlsx(){
			url = 'index.php?route=produccion/ejemplo/download_xlsx&user_token={{ user_token }}';
			url += filtrar();
			$.ajax({
				url: url,
				dataType: 'text',
				beforeSend: function() {
					$.LoadingOverlay("show");
				},
				complete: function() {
					$.LoadingOverlay("hide");
				},				
				success: function(json) {
					location = json;
				},
			});	
		}
		$('#xlsx-upload').on('click', function() {
			$('#form-upload').remove();
			$('body').prepend('<form enctype="multipart/form-data" id="form-upload" style="display: none;"><input type="file" name="file" /></form>');
			$('#form-upload input[name=\'file\']').trigger('click');
			if (typeof timer != 'undefined') {
				clearInterval(timer);
			}
			timer = setInterval(function() {
				if ($('#form-upload input[name=\'file\']').val() != '') {
					clearInterval(timer);
					var formData = new FormData($('#form-upload')[0]);
					$.ajax({
						url : 'index.php?route=produccion/ejemplo/upload_xlsx&user_token={{ user_token }}',
						type: 'post',
						dataType: 'json',
						data: formData,
						cache: false,
						contentType: false,
						processData: false,
						beforeSend: function() {
							$.LoadingOverlay("show");
						},
						complete: function() {
							$.LoadingOverlay("hide");
						},
						success: function(json) {
							url = 'index.php?route=produccion/ejemplo&user_token={{ user_token }}';
							url += filtrar();
							location = url;
						},
						error: function(xhr, ajaxOptions, thrownError) {
							alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
						}
					});
				}
			}, 500);
		});		
//--></script>
